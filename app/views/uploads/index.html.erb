<div class="form">
  <%= form_for :upload, :url => uploads_path do |f| %>
    <form class="form-inline">
      <div class="form-group">
        <label for="exampleInputName2">Name </label>
        <%= f.text_field :name, placeholder: "Name of the person" %>
      </div>
      <div class="form-group">
        <label for="exampleInputName2">File </label>
        <!-- <div class ="file"> -->
          <%= f.file_field :file %>(Upload only pdf, doc, htm, html, docx)
        <!-- </div> -->
      </div>
      <%= f.submit "Upload", class: "btn btn-primary"%>
    </form>
  <%end%>
</div>

<table class ="table table-bordered">
<tr>
  <th>Name</th>
  <th>File</th>
</tr>
  <% @uploads.each do |resume|%>
    <tr>
      <td><%= resume.name%></td>
      <td><%= link_to "Download Resume", resume.file_url , class: "btn btn-primary" %></td>
    </tr>
  <%end%>
</table>